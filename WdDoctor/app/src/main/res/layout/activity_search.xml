<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/imgBackSearchCircle"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/common_icon_back_black_n"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_weight="1"
            android:background="@drawable/edit_ss_bg"
            >
            <EditText
                android:id="@+id/etSsContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_32"
                android:textSize="@dimen/sp_12"
                android:hint="请输入病症名称或标题关键词"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"
                >
            </EditText>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="搜索"
            android:textSize="@dimen/sp_14"
            android:textColor="#3087ea"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_gravity="center"
            >
        </TextView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSearchCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        ></androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/wuxx"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="@dimen/dp_129"
            android:layout_height="@dimen/dp_129"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_132"
            android:src="@mipmap/no_search_message"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13sp"
            android:textColor="#333"
            android:id="@+id/wuxxcon"
            android:layout_marginTop="@dimen/dp_40"
            android:text="没有找到“关键字”的相关病友圈"
            ></TextView>
    </LinearLayout>
</LinearLayout>