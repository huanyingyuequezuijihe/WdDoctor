<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SickCircleInfoActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        >
        <ImageView
            android:id="@+id/imgBackSickCircle"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/common_icon_back_black_n"
            >
        </ImageView>
        <TextView
            android:id="@+id/tvBackSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="治疗方法"
            android:textSize="@dimen/sp_20"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tvNameSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#3087ea"
            android:text="姓名"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#3087ea"
            android:text="[病症]"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:id="@+id/tvIllnessSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="神经精神病"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#3087ea"
            android:text="[科室]"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:id="@+id/tvSectionSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="内科"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#3087ea"
            android:text="[病症详情]"
            android:layout_marginTop="@dimen/dp_20"
            >
        </TextView>
        <TextView
            android:id="@+id/tvDetailsSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="详情"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#3087ea"
            android:text="[治疗经历]"
            android:layout_marginTop="@dimen/dp_20"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvHospitalSickCircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:textColor="#000000"
                android:text="医院"
                android:layout_marginTop="@dimen/dp_10"
                >
            </TextView>
            <TextView
                android:id="@+id/tvTimeSickCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#000000"
                android:text="治疗的时间"
                android:layout_marginTop="@dimen/dp_10"
                >
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/tvExperienceSickCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="治疗的经历"
            android:layout_marginTop="@dimen/dp_10"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#3087ea"
            android:text="[相关图片]"
            android:layout_marginTop="@dimen/dp_20"
            >
        </TextView>
        <ImageView
            android:id="@+id/imgPhotoSickCircle"
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_144"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"
            >
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvAmountSickCircle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="30H币"
            android:textColor="#BA0D00"
            android:gravity="center"
            android:background="#fff"
            >
        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4759BF"
            android:text="我来解答"
            android:textColor="#fff"
            >
        </Button>
    </LinearLayout>
</LinearLayout>