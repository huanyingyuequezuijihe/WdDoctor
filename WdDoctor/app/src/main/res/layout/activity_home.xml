<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主要业务"
            android:textColor="#3087ea"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/dp_20"
            android:textStyle="bold"
            tools:ignore="MissingConstraints">
        </TextView>

        <ImageView
            android:id="@+id/img_message_black"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/common_nav_message_black_n"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/inquiry_bg"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/doctor"
            tools:layout_editor_absoluteX="330dp"
            tools:layout_editor_absoluteY="6dp"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
        </ImageView>
        <TextView
            android:id="@+id/tvAskProblem"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:text="问诊"
            android:background="@mipmap/tip_box"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_3"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            >
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/promise_bg"
        >
        <TextView
            android:id="@+id/tvAnswerWy"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:text="答疑"
            android:background="@mipmap/tip_box"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_3"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            >
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:text="我的信息"
        android:textColor="#3087ea"
        android:textSize="16sp"
        android:textStyle="bold">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/my_information_bg"
        >
        <ImageView
            android:id="@+id/userHeadPic"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_130"
            android:alpha="1"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintRight_toLeftOf="@+id/userMessage"
            tools:ignore="MissingConstraints">
        </ImageView>

        <LinearLayout
            android:id="@+id/userMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/userHeadPic"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="超兽武装"
                android:textSize="@dimen/sp_16"
                android:textColor="#666666"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国解放军人民医院"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主治医师"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="骨科"
                android:layout_marginTop="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAdministrationWy"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_30"
            android:text="管理"
            android:background="@mipmap/tip_box"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_3"
            android:textColor="#fff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/dp_10"
            >
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>