<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_74"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:text="完善信息"
        android:id="@+id/ruzhu_wanshan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:text="审核通过即可成功入驻"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#d92109"
        android:text="填写正确信息有助于快速通过审核"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="您的真实姓名"/>
    <EditText
        android:id="@+id/ruzhu_ed_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:background="@color/ruzhu_ed"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="您所在医院"/>
    <EditText
        android:id="@+id/ruzhu_ed_yiyuan"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="您所在科室"/>
    <EditText
        android:id="@+id/ruzhu_ed_keshi"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_300"
        android:hint="儿科"
        android:layout_height="@dimen/dp_40"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="您的职称"/>
    <EditText
        android:id="@+id/ruzhu_ed_zhicheng"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_300"
        android:hint="主治医师"
        android:layout_height="@dimen/dp_40"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ruzhu_btn_xia"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="#3087ea"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>