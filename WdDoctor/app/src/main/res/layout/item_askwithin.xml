<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:background="@drawable/ripple"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvTitleAskWithin"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"
            >
        </TextView>
        <ImageView
            android:id="@+id/imgAmountAskWithin"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/h_currency"
            android:layout_gravity="center"
            >
        </ImageView>
        <TextView
            android:id="@+id/tvAmountAskWithin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="#DD0000"
            android:text="30"
            >
        </TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/tvDetailAskWithin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_16"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvTimeAskWithin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-12-15 05-20"
            android:textColor="#8C8787"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_200">
        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#8A8A8A"
        >
    </View>
</LinearLayout>
