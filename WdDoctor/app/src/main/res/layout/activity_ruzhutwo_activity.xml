<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_30"
    android:layout_marginRight="@dimen/dp_30"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:text="完善信息"
        android:id="@+id/ruzhu_wanshan"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#3087ea"
        android:text="审核通过即可成功入驻"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的邮箱账号"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_48"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ruzhu_ed_zhang"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@null"
            android:padding="20dp" />

        <Button
            android:id="@+id/tv_get_captcha"
            android:layout_width="@dimen/dp_104"
            android:layout_height="@dimen/dp_40"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:background="#783cec"
            android:text="获取验证码"
            android:textSize="12sp" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入验证码"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_30"/>
    <EditText
        android:id="@+id/ruzhu_ed_code"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_40"
        android:background="@null"
        android:padding="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入密码"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ruzhu_ed_pwd"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@null"
            android:padding="20dp" />

        <ImageView
            android:id="@+id/ruzhu_img_yan"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ruzhu_yan"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请再次输入密码"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ruzhu_ed_pwd2"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:background="@null"
            android:padding="20dp" />

        <ImageView
            android:id="@+id/ruzhu_img_yan2"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@mipmap/ruzhu_yan_zhang"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ruzhu_btn_xia2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="#3087ea"
            android:text="下一步"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>